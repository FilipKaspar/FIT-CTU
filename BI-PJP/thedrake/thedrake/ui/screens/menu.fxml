<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>

<StackPane fx:id="stackPane" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thedrake.ui.screens.MenuController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <ImageView fx:id="imageView">
        <image>
            <Image url="https://wallpapercave.com/wp/YBXYOo0.jpg" />
        </image>
    </ImageView>
    <VBox alignment="TOP_CENTER">
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <right>
            <BorderPane prefHeight="200.0" prefWidth="816.0" BorderPane.alignment="CENTER">
               <top>
                    <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" prefHeight="128.0" prefWidth="600.0" style="-fx-background-color: black;" text="THE DRAKE" textFill="WHITE" BorderPane.alignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font name="JetBrains Mono ExtraBold" size="96.0" />
                     </font>
                  </Label>
               </top>
               <opaqueInsets>
                  <Insets left="15.0" right="15.0" />
               </opaqueInsets>
               <bottom>

                   <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
                       <Button fx:id="playButton" onAction="#startGame" lineSpacing="15.0" prefHeight="50.0" prefWidth="300.0" text="Hra dvou hráčů" textFill="WHITE">
                            <font>
                               <Font name="JetBrains Mono ExtraBold" size="20.0" />
                            </font>
                       </Button>
                       <Button lineSpacing="15.0" prefHeight="50.0" prefWidth="300.0" text="Hra proti počítači" textFill="WHITE">
                        <font>
                           <Font name="JetBrains Mono ExtraBold" size="20.0" />
                        </font></Button>
                       <Button lineSpacing="15.0" prefHeight="50.0" prefWidth="300.0" text="Hra po internetu" textFill="WHITE">
                        <font>
                           <Font name="JetBrains Mono ExtraBold" size="20.0" />
                        </font></Button>
                       <Button fx:id="exitButton" lineSpacing="15.0" onAction="#handleExit" prefHeight="50.0" prefWidth="166.0" text="Konec" textFill="WHITE">
                        <font>
                           <Font name="JetBrains Mono ExtraBold" size="20.0" />
                        </font></Button>
                     <BorderPane.margin>
                        <Insets top="50.0" />
                     </BorderPane.margin>
                   </VBox>
               </bottom>
               <BorderPane.margin>
                  <Insets top="30.0" />
               </BorderPane.margin>
            </BorderPane>
         </right>
      </BorderPane>
    </VBox>
</StackPane>
